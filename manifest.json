kgp () 
{ 
    kubectl get pods -o wide | awk '
  NR==1 {
    print
    next
  }
  function parse_age(age) {
    total=0
    match(age, /([0-9]+)d/, d)
    if (d[1] != "") total += d[1]*86400
    match(age, /([0-9]+)h/, h)
    if (h[1] != "") total += h[1]*3600
    match(age, /([0-9]+)m/, m)
    if (m[1] != "") total += m[1]*60
    match(age, /([0-9]+)s/, s)
    if (s[1] != "") total += s[1]
    return total
  }
  {
    secs[NR] = parse_age($5)
    lines[NR] = $0
  }
  END {
    n = asorti(secs, idx, "@val_num_asc")
    for (i=1; i<=n; i++) print lines[idx[i]]
  }' | cut -c -$COLUMNS
}
